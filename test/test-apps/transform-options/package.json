{
  "name": "sample-package",
  "version": "0.0.1",
  "main": "lib/index.js",
  "browser": "src/index.js",
  "browserify": {
    "transform": [
      ["babelify", {"presets": ["es2015"]}],
      ["uglifyify", {
        "mangle": false,
