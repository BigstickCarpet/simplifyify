{
  "name": "@jsdevtools/simplifyify",
  "version": "8.0.2",
  "description": "A simplified Browserify and Watchify CLI",
  "keywords": [
    "browserify",
    "browserify-plugin",
    "watchify",
    "cli",
    "minify",
    "uglify",
    "uglifyify",
    "sourcemap",
    "source-map",
    "source map",
    "exorcist",
    "istanbul"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "homepage": "https://jstools.dev/simplifyify",
  "repository": {
    "type": "git",
    "url": "https://github.com/JS-DevTools/simplifyify.git"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "bin": {
    "simplifyify": "bin/simplifyify.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "clean": "shx rm -rf .nyc_output coverage",
    "lint": "eslint bin lib test/fixtures test/specs",
    "test": "mocha && npm run lint",
    "coverage": "nyc node_modules/mocha/bin/mocha",
    "upgrade": "npm-check -u && npm audit fix",
    "bump": "bump --tag --push --all",
    "release": "npm run upgrade && npm run clean && npm test && npm run bump"
  },
  "dependencies": {
    "@jsdevtools/browserify-banner": "^2.0.4",
    "@jsdevtools/ono": "^7.1.3",
    "browserify": "^16.5.1",
    "browserify-istanbul": "^3.0.1",
    "commander": "^5.1.0",
    "exorcist": "^1.0.0",
    "globby": "^11.0.1",
    "mkdirp-promise": "^5.0.1",
    "shx": "^0.3.2",
    "tsify": "^4.0.2",
    "uglify-es": "^3.3.7",
    "uglifyify": "^5.0.2",
    "watchify": "^3.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@jsdevtools/eslint-config": "^1.0.4",
    "@jsdevtools/host-environment": "^2.0.4",
    "@jsdevtools/version-bump-prompt": "^6.0.5",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "babelify": "^10.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "mocha": "^8.0.1",
    "npm-check": "^5.9.2",
    "nyc": "^15.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rmfr": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "typescript": "*"
  }
}
