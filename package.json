{
  "name": "simplifyify",
  "version": "6.0.1",
  "description": "A simplified Browserify and Watchify CLI",
  "keywords": [
    "browserify",
    "browserify-plugin",
    "watchify",
    "cli",
    "minify",
    "uglify",
    "uglifyify",
    "sourcemap",
    "source-map",
    "source map",
    "exorcist",
    "istanbul"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "homepage": "https://jsdevtools.org/simplifyify",
  "repository": {
    "type": "git",
    "url": "https://github.com/JS-DevTools/simplifyify.git"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "bin": {
    "simplifyify": "bin/simplifyify.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "lint": "eslint bin lib test/fixtures test/specs --fix",
    "test": "mocha && npm run lint",
    "coverage": "nyc --reporter=text --reporter=lcov mocha",
    "upgrade": "npm-check -u",
    "bump": "bump --prompt --tag --push --all",
    "release": "npm run upgrade && npm test && npm run bump && npm publish"
  },
  "dependencies": {
    "browserify": "^16.2.3",
    "browserify-banner": "^1.0.11",
    "browserify-istanbul": "^3.0.1",
    "commander": "^2.18.0",
    "exorcist": "^1.0.0",
    "globby": "^8.0.1",
    "mkdirp-promise": "^5.0.1",
    "ono": "^4.0.9",
    "tsify": "^4.0.0",
    "uglify-es": "^3.3.7",
    "uglifyify": "^5.0.1",
    "watchify": "^3.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.8",
    "babelify": "^10.0.0",
    "chai": "^4.2.0",
    "codacy-coverage": "^3.1.0",
    "coveralls": "^3.0.2",
    "del": "^3.0.0",
    "eslint": "^5.6.1",
    "eslint-config-modular": "^4.2.2",
    "mocha": "^5.2.0",
    "npm-check": "^5.9.0",
    "nyc": "^13.0.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "typescript": "^3.1.1",
    "version-bump-prompt": "^4.2.1"
  },
  "peerDependencies": {
    "typescript": "*"
  }
}
